@{
    ViewData["Title"] = "Branch List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using System.Data;
@model DataTable;

<main id="main" class="main">

    @if (TempData["Msg"] != null)
    {
        <div id="Feature-alert" class="alert alert-success color-success">
            <i class="bi bi-check-circle"></i> @TempData["Msg"]
        </div>

        <script>
            setTimeout(function () {
                $('#Feature-alert').fadeOut('fast');
            }, 2000); // 2 seconds
        </script>
    }

<h1><u><b>Branch List</b></u></h1>
<br />

<a class="btn btn-success" asp-action="MST_BranchAdd" asp-controller="MST_Branch">Add Branch</a>
<br />
<br />
<div class="pull-right col-xl-4 ms-lg-auto">
    <div id="sample_1_filter" class="dataTables_filter">
        <input type="text" class="form-control input-group-sm input-small input-inline" id="sample_1" placeholder="Search" aria-controls="sample_1">
    </div>
</div>
<br />
    <table class="table table-responsive table-sm border-dark">
    <thead>
        <tr>
            @*<th>Branch ID</th>*@
            <th>Branch Name</th>
            <th>Branch Code</th>
            <th>Created</th>
            <th>Modified</th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="sample_2">
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                @*<td>@dataRow["BranchID"]</td>*@
                <td>@dataRow["BranchName"]</td>
                <td>@dataRow["BranchCode"]</td>
                <td>@Convert.ToDateTime(dataRow["Created"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchAdd">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["BranchID"])" name="BranchID">
                        <button type="submit" class="btn btn-info" value="Edit">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-area="MST_Branch" asp-controller="MST_Branch" asp-action="MST_BranchDelete">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["BranchID"])" name="BranchID">
                        <button type="submit" class="btn btn-danger" value="Delete">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
</main>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}