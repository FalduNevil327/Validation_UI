@{
    ViewData["Title"] = "City List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model DataTable;
@using Validation_UI.Areas.LOC_City.Models
@{
    LOC_CityFilterModel FilterModel = new LOC_CityFilterModel();

}
<main class="main" id="main">

    @if (TempData["Msg"] != null)
    {
        <div id="Feature-alert" class="alert alert-success color-success">
            <i class="bi bi-check-circle"></i> @TempData["Msg"]
        </div>

        <script>
            setTimeout(function () {
                $('#Feature-alert').fadeOut('fast');
            }, 2000); // 2 seconds
        </script>
    }

<h1><u><b>City List</b></u></h1>
<br />

<a class="btn btn-success" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAdd">Add City</a>
<br />
<br />
<div class="container-fluid border border-dark p-4">
    <form class="row">
        <div>
            <h2>Filter</h2>
        </div>
        <div class="col-3">
            <select class ="form-control"  asp-for="@FilterModel.CountryID"  asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                <option value ="">Select Country</option>
                    </select>
        </div>
        <div class="col-3">
            <select class="form-control" asp-for="@FilterModel.StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">
                <option value="">Select State</option>
            </select>
        </div>
        <div class="col-3">
            <input type="text" class="form-control" asp-for="@FilterModel.CityName" placeholder="CityName" />
        </div>
        <div class="col-3">
            <input type="text" class="form-control" asp-for="@FilterModel.CityCode" placeholder="CityCode" />
        </div>
        <div class="col my-2">
            <button class="btn btn-success" type="submit" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityFilter">Search</button>
            <button class="btn btn-danger" type="submit" runat="server" OnClientClick="this.form.reset();return false;">Clear</button>
        </div>
    </form>
   @* <form>
        <button class="btn btn-danger" type="submit" runat="server" OnClientClick="this.form.reset();return false;">Clear</button>
    </form>*@
</div>
<br />

    <table class="table table-responsive table-sm border-dark">
    <thead>
        <tr>
            <th>City Id</th>
            <th>City Name</th>
            <th>State Name</th>
            <th>Country Name</th>
            <th>City Code</th>
            <th>Created Date</th>
            <th>Modified</th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                <td>@dataRow["CityId"]</td>
                <td>@dataRow["CityName"]</td>
                <td>@dataRow["StateName"]</td>
                <td>@dataRow["CountryName"]</td>
                <td>@dataRow["CityCode"]</td>
                <td>@Convert.ToDateTime(dataRow["CreationDate"]).ToString("dd-MM-yyyy")</td>
                <td>@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy")</td>
                <td>
                    <form method="post" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAdd">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["CityID"])" name="CityID">
                        <button type="submit" class="btn btn-info" value="Edit">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityDelete">
                        <input type="hidden" value="@Convert.ToInt32(dataRow["CityID"])" name="CityID">
                        <button type="submit" class="btn btn-danger" value="Delete">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
</main>

